;; Eval Buffer with `M-x eval-buffer' to register the newly created template.

(dap-register-debug-template
  "cpptools::debug"
  (list :type "cppdbg"
        :request "launch"
        :name "cpptools::Run Configuration"
        :MIMode "gdb"
        :program "${workspaceFolder}/test"
        :cwd "${workspaceFolder}"))

